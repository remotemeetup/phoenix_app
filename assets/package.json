{
  "repository": {},
  "name": "taskify",
  "description": "Manage your processes",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf ../priv/static",
    "deploy": "yarn clean; webpack --config config/webpack.prod.config.js",
    "spec": "jest src/spec",
    "spec:watch": "jest src/spec --watch",
    "spec:coverage": "jest src/spec --coverage",
    "start": "yarn run watch",
    "watch": "webpack-dev-server --config config/webpack.dev.config.js  --mode development --hot --watch-stdin"
  },
  "dependencies": {
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "phoenix": "file:../deps/phoenix",
    "phoenix_html": "file:../deps/phoenix_html",
    "react": "^16.6.1",
    "react-dom": "^16.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.4",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^1.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "identity-obj-proxy": "^3.0.0",
    "image-webpack-loader": "^4.5.0",
    "jest": "^23.6.0",
    "node-sass": "^4.10.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/**/*.jsx",
      "!src/**/index.js",
      "!src/spec/**/*.js",
      "!src/spec/**/*.jsx"
    ],
    "globals": {
      "window": true
    },
    "moduleFileExtensions": ["js", "jsx", "ts", "tsx"],
    "moduleNameMapper": {
      "^.+\\.(css|scss)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/spec/support/fileMock.js"
    },
    "setupFiles": [
      "<rootDir>/src/spec/spec_helper.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "src/spec/.*(spec)\\.(js|jsx|ts|tsx)$",
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "verbose": true
  }
}
